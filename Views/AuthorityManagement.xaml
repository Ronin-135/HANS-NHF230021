<UserControl
    x:Class="WPFMachine.Views.AuthorityManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:WPFMachine.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:WPFMachine.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:AuthorityManagementViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <materialDesign:Card
            Grid.Column="0"
            Margin="5"
            Padding="10"
            materialDesign:ElevationAssist.Elevation="Dp4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <materialDesign:Card
                    Grid.RowSpan="2"
                    Margin="4"
                    materialDesign:ElevationAssist.Elevation="Dp4">
                    <materialDesign:DialogHost>
                        <materialDesign:DialogHost.DialogContent>
                            <StackPanel Margin="16">
                                <TextBox
                                    Margin="0,8,0,0"
                                    HorizontalAlignment="Stretch"
                                    materialDesign:HintAssist.Hint="{DynamicResource 用户}"
                                    Text="{Binding AddUser}" />

                                <PasswordBox
                                    Margin="0,8,0,0"
                                    HorizontalAlignment="Stretch"
                                    materialDesign:HintAssist.Hint="{DynamicResource 密码}"
                                    materialDesign:PasswordBoxAssist.Password="{Binding AddPwd}" />
                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <Button
                                        Margin="0,8,8,0"
                                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                        Content="确定"
                                        IsDefault="True"
                                        Style="{StaticResource MaterialDesignFlatButton}">
                                        <Button.CommandParameter>
                                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                True
                                            </system:Boolean>
                                        </Button.CommandParameter>
                                    </Button>
                                    <Button
                                        Margin="0,8,8,0"
                                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                        Content="取消"
                                        IsCancel="True"
                                        Style="{StaticResource MaterialDesignFlatButton}">
                                        <Button.CommandParameter>
                                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                False
                                            </system:Boolean>
                                        </Button.CommandParameter>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:DialogHost.DialogContent>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <DataGrid
                                Name="UserList"
                                AutoGenerateColumns="False"
                                BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                                CanUserAddRows="False"
                                DockPanel.Dock="Top"
                                ItemsSource="{Binding Users}"
                                SelectedValue="{Binding CurUser}">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{DynamicResource BorderColor}" />
                                        <Setter Property="Height" Value="35" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Padding" Value="10,0,0,0" />
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="1*"
                                        Binding="{Binding Name}"
                                        CanUserSort="False"
                                        Header="{DynamicResource 用户}" />
                                </DataGrid.Columns>
                            </DataGrid>
                            <UniformGrid Grid.Row="1" Rows="1">
                                <Button
                                    Margin="3"
                                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                    Content="{DynamicResource 添加用户}"
                                    Foreground="White" />
                                <Button
                                    Margin="3"
                                    Command="{Binding RemoveUserCommand}"
                                    CommandParameter="{Binding CurUser}"
                                    Content="{DynamicResource 删除}"
                                    Foreground="White" />

                            </UniformGrid>


                        </Grid>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="DialogClosed">
                                <prism:InvokeCommandAction Command="{Binding UserAddDialogClosedCommand}" TriggerParameterPath="Parameter" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </materialDesign:DialogHost>
                </materialDesign:Card>


                <materialDesign:Card
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="4"
                    materialDesign:ElevationAssist.Elevation="Dp4">
                    <materialDesign:DialogHost>

                        <materialDesign:DialogHost.DialogContent>
                            <StackPanel Margin="16">
                                <TextBox
                                    Margin="0,8,0,0"
                                    HorizontalAlignment="Stretch"
                                    materialDesign:HintAssist.Hint="{DynamicResource 昵称}"
                                    Text="{Binding AddUserLevelName}" />

                                <ComboBox
                                    materialDesign:HintAssist.Hint="是否导入现有的权限"
                                    DisplayMemberPath="Name"
                                    ItemsSource="{Binding Levels}"
                                    SelectedValue="{Binding CopyLeve}" />

                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <Button
                                        Margin="0,8,8,0"
                                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                        Content="确定"
                                        IsDefault="True"
                                        Style="{StaticResource MaterialDesignFlatButton}">
                                        <Button.CommandParameter>
                                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                True
                                            </system:Boolean>
                                        </Button.CommandParameter>
                                    </Button>
                                    <Button
                                        Margin="0,8,8,0"
                                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                        Content="取消"
                                        IsCancel="True"
                                        Style="{StaticResource MaterialDesignFlatButton}">
                                        <Button.CommandParameter>
                                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                False
                                            </system:Boolean>
                                        </Button.CommandParameter>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:DialogHost.DialogContent>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <DataGrid
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserReorderColumns="False"
                                ItemsSource="{Binding Levels}"
                                SelectedValue="{Binding CurLeveBox}">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{DynamicResource BorderColor}" />
                                        <Setter Property="Height" Value="35" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Padding" Value="10,0,0,0" />
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="1*"
                                        Binding="{Binding Name}"
                                        Header="权限名" />
                                    <DataGridCheckBoxColumn Width="1*" Binding="{Binding IsCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </DataGrid.Columns>


                            </DataGrid>
                            <UniformGrid Grid.Row="1" Rows="1">
                                <Button
                                    Margin="3"
                                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                    Content="{DynamicResource 添加用户等级}"
                                    Foreground="White" />
                                <Button
                                    Margin="3"
                                    Command="{Binding RemoveLevelCommand}"
                                    CommandParameter="{Binding CurLeveBox}"
                                    Content="{DynamicResource 删除}"
                                    Foreground="White" />

                            </UniformGrid>

                        </Grid>


                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="DialogClosed">
                                <prism:InvokeCommandAction Command="{Binding AddUserLevelCommand}" TriggerParameterPath="Parameter" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </materialDesign:DialogHost>
                </materialDesign:Card>



            </Grid>

        </materialDesign:Card>

        <materialDesign:Card
            Grid.Column="1"
            Margin="5"
            Padding="10"
            materialDesign:ElevationAssist.Elevation="Dp8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <materialDesign:Card
                    Grid.ColumnSpan="2"
                    Margin="6"
                    Padding="6"
                    materialDesign:ElevationAssist.Elevation="Dp4">
                    <UniformGrid>
                        <TextBox
                            materialDesign:HintAssist.Hint="通过名字来搜索权限"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding NameFiltering, UpdateSourceTrigger=PropertyChanged}" />

                    </UniformGrid>
                </materialDesign:Card>


                <materialDesign:Card
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Margin="6"
                    materialDesign:ElevationAssist.Elevation="Dp4">
                    <DataGrid
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserSortColumns="False"
                        IsReadOnly="True"
                        ItemsSource="{Binding Authoritys}"
                        SelectedValue="{Binding CurAuthoritys}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{DynamicResource BorderColor}" />
                                <Setter Property="Height" Value="35" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Padding" Value="10,0,0,0" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="1*"
                                Binding="{Binding Name}"
                                Header="操作权限名" />
                        </DataGrid.Columns>
                    </DataGrid>
                </materialDesign:Card>

                <materialDesign:Card
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="6"
                    materialDesign:ElevationAssist.Elevation="Dp4">
                    <DataGrid
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserReorderColumns="False"
                        CanUserSortColumns="False"
                        ItemsSource="{Binding RunningState}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{DynamicResource BorderColor}" />
                                <Setter Property="Height" Value="35" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Padding" Value="10,0,0,0" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="1*"
                                Binding="{Binding Name}"
                                Header="设备状态"
                                IsReadOnly="True" />

                            <DataGridCheckBoxColumn
                                Width="1*"
                                Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                Header="是否可编辑" />
                        </DataGrid.Columns>
                    </DataGrid>

                </materialDesign:Card>


                <materialDesign:Card
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="6"
                    materialDesign:ElevationAssist.Elevation="Dp4">
                    <DataGrid
                        Grid.Row="1"
                        Grid.Column="3"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserReorderColumns="False"
                        CanUserSortColumns="False"
                        ItemsSource="{Binding LeveFunc}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{DynamicResource BorderColor}" />
                                <Setter Property="Height" Value="35" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Padding" Value="10,0,0,0" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="1*"
                                Binding="{Binding Name}"
                                Header="用户等级"
                                IsReadOnly="True" />

                            <DataGridCheckBoxColumn
                                Width="1*"
                                Binding="{Binding IsEditor, UpdateSourceTrigger=PropertyChanged}"
                                Header="是否可编辑" />
                        </DataGrid.Columns>
                    </DataGrid>

                </materialDesign:Card>


            </Grid>
        </materialDesign:Card>




    </Grid>
</UserControl>
